extends ../layout
block content
  .main
    form#create-user-form(name='create-user-form', method='post')
      fieldset
        .form-group.first
          .input-group.col-sm12
            span.input-group-addon
              i.fa.fa-user
            input#fullname.form-control.input-lg(tabindex='1', type='text', name='fullname', required, placeholder='Họ và tên') 
        .form-group.middle
          .input-group.col-sm12
            span.input-group-addon
              i.fa.fa-envelope
            input#username.form-control.input-lg(tabindex='2', type='text', name='username', required, placeholder='Tài khoản')
        .form-group.middle
          .input-group.col-sm12
            span.input-group-addon
              i.fa.fa-at
            input#email.form-control.input-lg(tabindex='3', type='email', name='email', required, placeholder='Địa chỉ email')
        .form-group.last
          .input-group.col-sm12
            span.input-group-addon
              i.fa.fa-key
            input#password.form-control.input-lg(tabindex='4', type='password', name='password', required, placeholder='Mật khẩu')
        .form-group
              button.btn.btn-primary.col-xs-12(tabindex='5', type='submit') Tạo tài khoản
        #error
          if error
            div(style='color:red') #{error}

